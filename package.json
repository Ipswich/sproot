{
  "name": "sproot",
  "version": "0.1.0",
  "private": true,
  "description": "Garden Automation Managment",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build --verbose tsconfig.build.json",
    "build:client": "npm run build --workspace=common --workspace=client",
    "build:server": "npm run build --workspace=common --workspace=server",
    "clean": "npm run clean --workspaces --if-present",
    "coverage": "npm run coverage --workspaces --if-present",
    "install:common": "npm ci --workspace=common",
    "install:client": "npm ci --workspace=common --workspace=client",
    "install:server": "npm ci --workspace=common --workspace=server",
    "prettier:check": "npm run prettier:check --workspaces --if-present",
    "prettier:write": "npm run prettier:write --workspaces --if-present",
    "start:server": "npm run start --workspace=server",
    "start:dev:server": "npm run start:dev --workspace=server",
    "start:dev:client": "npm run start:dev --workspace=client",
    "test": "npm run test --workspaces --if-present",
    "check": "npm run check --workspaces --if-present"
  },
  "author": "Ben Steele",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
