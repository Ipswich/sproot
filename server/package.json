{
  "name": "@sproot/sproot-server",
  "private": true,
  "description": "sproot-server, the backend for the sproot project",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build --verbose",
    "clean": "rimraf tsconfig.tsbuildinfo && rimraf ./dist",
    "coverage": "nyc npm run test",
    "lint": "npx eslint ./src",
    "prettier:write": "npx --yes prettier . --write",
    "prettier:check": "npx --yes prettier . --check",
    "start": "npm run build && node ./dist/index.js",
    "start:dev": "npx nodemon --delay 3",
    "test": "npm run build && mocha -r ts-node/register --colors --ignore './src/test/**/*.spec.ts' './src/**/*.spec.ts'",
    "test:api": "NODE_ENV=test && npm run build && mocha -r ts-node/register --file ./src/test/setup.ts --colors './src/test/**/*.spec.ts'",
    "check": "npm run prettier:check && mocha -r ts-node/register --colors ./src/**/*.spec.ts"
  },
  "author": "Ben Steele",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.6",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.15",
    "@types/ds18b20": "^0.1.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.5.9",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.51.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "sinon": "^18.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "tplink-smarthome-simulator": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bme280": "github:jhoffi/bme280-typings",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "pca9685": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tplink-smarthome-api": "^5.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "yamljs": "^0.3.0"
  }
}
