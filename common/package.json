{
  "name": "@sproot/sproot-common",
  "version": "0.1.0",
  "private": true,
  "description": "Sproot common libraries",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build --verbose",
    "clean": "rimraf tsconfig.tsbuildinfo && rimraf ./dist",
    "lint": "npx eslint ./src",
    "coverage": "nyc npm run test",
    "prettier:write": "npx --yes prettier . --write",
    "prettier:check": "npx --yes prettier . --check",
    "test": "mocha -r ts-node/register --colors ./src/**/*.spec.ts",
    "check": "npm run prettier:check && mocha -r ts-node/register --colors ./src/**/*.spec.ts"
  },
  "author": "Ben Steele",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.9",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.51.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "sinon": "^18.0.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "mysql2": "^3.6.0",
    "winston": "^3.11.0"
  }
}
